{
  "compilerOptions": {
    "target": "ESNext",                     
    "module": "ESNext",                                            
    "moduleResolution": "node",              
    "strict": true,                          
    "esModuleInterop": true,                 
    "skipLibCheck": true,                    
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "allowImportingTsExtensions": true,
    "emitDeclarationOnly": true,
    "declaration": true
  },
  "include": ["src/**/*.ts", "server.ts"],                 
  "exclude": ["node_modules"]                 
}
